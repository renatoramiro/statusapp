<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
	<h2 class="form-signin-heading">Entrar</h2>
  Email: <%= f.email_field :email, class: 'input-block-level', placeholder: 'Digite seu email', :autofocus => true %>

	Senha: <%= f.password_field :password, class: 'input-block-level', placeholder: 'Digite sua senha' %>

  <% if devise_mapping.rememberable? -%>
  	<label class="checkbox">
  		<%= f.check_box :remember_me, class: 'checkbox' %> <%= f.label :remember_me, 'Lembrar-me' %>
	  </label>  
  <% end -%>

  <div><%= f.submit "Entrar", class: "btn btn-large btn-primary" %></div>

  <hr>
  <%= render "devise/shared/links" %>
<% end %>